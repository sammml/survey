<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:background">@color/background</item>
    </style>

    <style name="name_field">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15pt</item>
        <item name="android:textColorHint">#ffffff</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:hint">@string/name_field</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:inputType">textCapWords</item>
        <item name="android:paddingLeft">10dp</item>
        //many more per requirement
    </style>

    <style name="questionpage">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15pt</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="answer">
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">match_parent</item>
    </style>


    <style name="checkbox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="submit_btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:background">#ffffff</item>
        <item name="android:textColor">#000000</item>
        <item name="android:padding">10dp</item>
        <item name="android:text">@string/submit_btn</item>
        <item name="android:layout_marginBottom">30dp</item>
    </style>

    <style name="divider">
        <item name="android:layout_width">350dp</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:background">#ffffff</item>
    </style>

    <style name="hint">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15pt</item>
        <item name="android:textColorHint">#ffffff</item>
        <item name="android:layout_width">350dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:hint">@string/hint</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        //many more per requirement
    </style>

</resources>
